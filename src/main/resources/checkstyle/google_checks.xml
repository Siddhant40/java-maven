<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- Naming Conventions -->
        <module name="AbbreviationAsWordInName">
            <property name="allowedAbbreviationLength" value="1"/>
        </module>
        <module name="AvoidInlineConditionals"/>
        <module name="BooleanExpressionComplexity"/>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA0-9]*$"/>
        </module>
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Indentation and formatting -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="lineWrapping" value="80"/>
            <property name="tabWidth" value="4"/>
        </module>

        <!-- Code complexity checks -->
        <module name="CyclomaticComplexity">
            <property name="max" value="10"/>
        </module>

        <module name="JavadocMethod">
            <property name="required" value="true"/>
        </module>
        <module name="JavadocStyle"/>
        <module name="JavadocType"/>
        <module name="MissingJavadocMethod">
            <property name="checkConstructors" value="true"/>
            <property name="checkMethods" value="true"/>
        </module>

        <module name="NoWhitespaceBefore">
            <property name="tokens" value="COMMA, SEMI, LBRACE, LBRACK, RPAREN"/>
        </module>

        <module name="VisibilityModifier">
            <property name="allowProtected" value="true"/>
        </module>

        <!-- Other checks -->
        <module name="EmptyBlock"/>
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>
        <module name="FinalClass"/>
        <module name="FinalMethod"/>
        <module name="FinalParameters"/>
        <module name="LineLength">
            <property name="max" value="100"/>
        </module>

        <!-- File Structure -->
        <module name="FileTabCharacter"/>
        <module name="NewlineAtEndOfFile"/>
    </module>
</module>
